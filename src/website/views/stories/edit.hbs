<script src="/public/js/views/storyeditview.js"></script>
<script>
    var story = {{{story}}};
    $(document).ready(function() {
        var view = new SocialTypist.StoryEditView(story, $('#story-editor'));
    });
</script>
<div class="container">
    <h1><a href="/">Social Typist</a></h1>
    <p class="main-links">
        <a class="read" href="#">Read stories</a>
        {{#if loginStatus.loggedIn}}
        | <a class="your-stories" href="/stories/yours">Your stories</a>
        {{/if}}
        | <a class="create-story selected" href="#">Write a story</a>
    </p>
    <div class="content-area row" id="story-editor">
        <div class="content-pane span8">
        <ul class="nav nav-pills">
            <li>
                <a href="#">Story Settings</a>
            </li>
            <li class="active">
                <a href="#">Content</a>
            </li>
            <li>
                <a href="#">Messages</a>
            </li>
            <li>
                <a href="#">History</a>
            </li>
        </ul>
        <hr />
        <div class="story"></div>
        </div>
        <div class="content-pane span4">
            <p class="form">
                <a href="#" class="publish-button btn btn-large">Publish Story</a> <a class="padded" href="#">preview</a>
            </p>
            <div class="authors section">
            </div>
            <div class="live-updates">
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
